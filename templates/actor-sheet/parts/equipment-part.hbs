<div class="equipment-card flex-container">
    <div class="silhouette-frame">
        <img class="silhouette-img" src="{{slh}}" alt="silhouette">
        {{#each bodySlots as |slot slotKey|}}
        <div class="equip-slot {{slot.cssClass}}" data-slot="{{slot.key}}">
            {{#if slot.item.img}}
            <img class="fullied-slot item-container" data-doc="{{slot.item.uuid}}" data-drag="true" src="{{slot.item.img}}" alt="{{slot.ey}}">
            {{else}}
            <img class="empty-slot" src="systems/whq/assets/ui/{{slot.key}}_background.png" alt="{{slot.key}}">
            {{/if}}
        </div>
        {{/each}}
    </div>

    <div class="equipment-container">

    </div>
</div>